<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
    <link rel="stylesheet" href="../css/album.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* CSS mới */
        .playlist-cover {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="album-header">
        <img src="./images/apt nền.png" alt="Playlist cover" class="playlist-cover-header">
        <div class="playlist-info">
            <p class="playlist-type">Public Playlist</p>
            <h1 class="playlist-title">New Music Friday Vietnam</h1>
            <p class="playlist-description">Những chiếc nhạc mới trong tuần, được tuyển chọn cẩn thận</p>
        </div>
    </div>

    <div class="album-content">
        <table class="song-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Date Added</th>
                    <th><i class="fas fa-clock"></i></th>
                </tr>
            </thead>
            <tbody id="song-list">
                <!-- Fake Data will be populated here -->
            </tbody>
        </table>
    </div>

    <script>
        const fakeData = [
            { id: 1, title: 'Disease', artist: 'Rosé, Bruno Mars', dateAdded: '6 days ago', duration: '3:50', cover: './images/apt nền.png' },
            { id: 2, title: 'Buriki no Dance +DEVILA REMIX', artist: 'AnotherNicoUploader', dateAdded: '6 years ago', duration: '3:22', cover: './images/Buriki_no_Dance _+DEVILA_REMIX.jpg' },
            { id: 3, title: 'Bad Never Looked So Good', artist: 'PattyCake Productions', dateAdded: '5 years ago', duration: '4:33', cover: './images/Bad_Never_Looked_So_Good.jpg' },
            { id: 4, title: 'Alien Alien', artist: 'AnotherNicoUploader', dateAdded: '8 years ago', duration: '3:02', cover: './images/Alien_Alien.jpg' },
            { id: 5, title: '클락션 (Klaxon)', artist: '(G)-IDLE', dateAdded: '3 months ago', duration: '3:06', cover: './images/클락션_(Klaxon).jpg' },
            { id: 6, title: 'Outer Science', artist: 'AnotherNicoUploader', dateAdded: '10 years ago', duration: '3:36', cover: './images/Outer_Science.jpg' },
            { id: 7, title: 'Blinding Lights', artist: 'The Weeknd', dateAdded: '2 years ago', duration: '3:20', cover: './images/Blinding_Lights.jpg' },
            { id: 8, title: 'Levitating', artist: 'Dua Lipa ft. DaBaby', dateAdded: '1 year ago', duration: '3:23', cover: './images/Levitating.jpg' },
            { id: 9, title: 'Good 4 U', artist: 'Olivia Rodrigo', dateAdded: '1 year ago', duration: '2:58', cover: './images/Good_4_U.jpg' },
            { id: 10, title: 'Peaches', artist: 'Justin Bieber ft. Daniel Caesar, Giveon', dateAdded: '2 years ago', duration: '3:18', cover: './images/Peaches.jpg' },
            { id: 11, title: 'Watermelon Sugar', artist: 'Harry Styles', dateAdded: '2 years ago', duration: '2:54', cover: './images/Watermelon_Sugar.jpg' },
            { id: 12, title: 'Save Your Tears', artist: 'The Weeknd', dateAdded: '2 years ago', duration: '3:35', cover: './images/Save_Your_Tears.jpg' },
            { id: 13, title: 'Stay', artist: 'Kid LAROI, Justin Bieber', dateAdded: '1 year ago', duration: '2:21', cover: './images/Stay.jpg' },
            { id: 14, title: 'As It Was', artist: 'Harry Styles', dateAdded: '6 months ago', duration: '2:47', cover: './images/As_It_Was.jpg' }
        ];

        function populateTable() {
            const songList = document.getElementById('song-list');
            fakeData.forEach(song => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${song.id}</td>
                    <td>
                        <img src="${song.cover}" alt="${song.title} Cover" class="playlist-cover">
                        ${song.title}
                    </td>
                    <td>${song.artist}</td>
                    <td>${song.dateAdded}</td>
                    <td>${song.duration}</td>
                `;
                songList.appendChild(row);
            });
        }

        populateTable();
    </script>

</body>
</html>
