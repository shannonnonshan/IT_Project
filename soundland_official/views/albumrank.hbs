<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{album.title}}</title>
    <link rel="stylesheet" href="/css/album.css">
</head>
<body>
    <main>
        <!-- Album Details Section -->
        <div class="album-container">
            <div class="album-header">
                <!-- Album Cover -->
                <img src="{{album.img}}" alt="{{album.title}} by {{album.artist}}" class="album-cover">
                <div class="album-info">
                    <p class="playlist-type">Public Playlist</p>
                    <h1 class="album-title">{{album.title}}</h1>
                    <p class="album-description">{{album.details.description}}</p>
                </div>
            </div>

            <!-- Track List Section -->
            <div class="song-list">
                <div class="song-header">
                    <span>#</span>
                    <span>Title</span>
                    <span>Artist</span>
                    <span>Album</span>
                    <span>Date Added</span>
                    <span>Duration</span>
                </div>
                <ul>
                    {{#each album.details.tracks}}
                    <li class="song-item">
                        <span class="song-index">{{@index}}</span>
                        <img src="{{this.cover}}" alt="{{this.title}}" class="song-cover">
                        <div class="song-info">
                            <p class="song-title">{{this.title}}</p>
                            <p class="song-artist">{{this.artist}}</p>
                        </div>
                        <span class="song-album">{{this.album}}</span>
                        <span class="song-date-added">{{this.dateAdded}}</span>
                        <span class="song-duration">{{this.duration}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </main>
</body>
</html>

