
{{#section "css"}}
    <link href="/static/css/output.css" rel="stylesheet">
{{/section}}
<form action="/account/upload" method="post" enctype="multipart/form-data">
<div class="w-full h-full
  bg-gradient-to-b from-[#37266A] via-[#5150B1] to-[#3A397E]
  rounded-[20px] flex flex-col p-3 gap-3">
  {{!-- <div class="w-full h-1/3 bg-black/25 rounded-2xl flex flex-col justify-center p-3">
    <span class="w-full h-1/2 text-white text-xl font-normal font-spartan">0% of free uploads used</span>
    <div id="progress-bar" class="w-full max-w-[80vh] max-h-[14px] bg-gray-200 rounded">
      <div class="h-full bg-blue-500 rounded" style="width: 90%;"></div>
    </div>
  </div> --}}
  <div class="w-full bg-black/25 rounded-2xl flex flex-col gap-2 justify-center items-center p-3 h-[60vh]">
  <span for="fileInput"  class="w-full text-white text-[45px] font-normal font-spartan text-center">
    Upload your folder
  </span>
  <input type="file" id="fileInput" name="FilePath" class="mb-4 p-2 border rounded text-white">
  <button type="submit" class="bg-[#D6CECE] rounded-[20px] w-[50%] p-2 text-xl mr-2">Upload</button>
   <span class="w-full text-white text-[20px] font-light font-spartan text-center">
   <i class="bi bi-file-earmark-music-fill"></i> Make a playlist if there are more than 1 file
  </span>
  
  {{#if fileUrl}}
    <div>
      <p>File uploaded successfully. Listen here:</p>
      <audio controls>
        <source src="{{fileUrl}}" type="audio/mp3" />
        Your browser does not support the audio element.
      </audio>
    </div>
  {{/if}}
</div>

</div>
</form>