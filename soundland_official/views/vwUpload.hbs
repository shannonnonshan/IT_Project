<div class="container">
    <h1>Nhận diện Nghệ sĩ</h1>
    <form action="/artist/recognize" method="POST" enctype="multipart/form-data">
        <input type="file" name="photo" required>
        <button type="submit">Tải lên</button>
    </form>

    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}

    {{#if result}}
    <p class="result">Nghệ sĩ nhận diện: {{result}}</p>
    {{/if}}
</div>